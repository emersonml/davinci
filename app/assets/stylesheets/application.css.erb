* {
  margin: <%=margin %>;
  padding: <%=padding %>;
  box-sizing: <%=boxSizing %>;

}


ul {
  list-style: none;
}

li {
  list-style: none;
}



img {
  width: 100%;
  height: auto;
}

a {
  text-decoration: none;
  color: var(--ton80);
}



i {
