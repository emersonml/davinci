/*====  VARIABLES ============================ */
:root {
  --height-header: 7%;
  --height-mainlay1: 100vh;
  --height-footer: 10vh;
  --width-aside-medium: 100px;
  --width-aside-large: 35vh;

  // --display-grid: none;
  // CORES =============
  --hue: 280; //cor matriz
  --hue-sec: 840; //cor matriz

  --color-light: hsl(var(--hue) 100% 80%);
  --color-primary: hsl(var(--hue) 100% 30%);
  --color-dark: hsl(var(--hue) 100% 10%);
  --color-alt: hsl(var(--hue) 100% 80%);
  --color-second: hsl(var(--hue-sec) 94% 87%);
  // --color-second: rgb(255, 222, 150);

  --link: hsl(var(--hue) 100% 80%);
  a {
    color: var(--body-font-color);
  }

  --font-body: sans-serif;

  // --font: 'Poppins', sans-serif;
  --font: "M PLUS Rounded 1c", sans-serif;
  --fontMPlus: "M PLUS Rounded 1c", sans-serif;
  --fontMontserrat: 'Montserrat Alternates', sans-serif;
  // --font: 'DM Sans', sans-serif;
} ////////////////////////////////////////////////// END ROOT

/*===  BASE ============================ */
//

a.logo {
  color: var(--ton90);
}
.color-light {
  color: var(--color-light);
}
.color-primary {
  color: var(--color-primary);
}
.bg-color-primary {
  background: var(--color-primary);
}
.title {
  font: 700 var(--font-size-title) var(--font-title); // color: var(--color-light);
} ////////////////////////////////////////////////// END BASE
.container {
  margin-left: 2vw;
  margin-right: 2vw;
}

