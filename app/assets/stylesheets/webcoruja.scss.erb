/*====  VARIABLES ============================ */
:root {



  --height-header: 7vh;
  --height-mainlay1: 100vh;
  --height-footer: 10vh;
  --width-aside-medium: 100px;
  --width-aside-large: 35vh;

  // --display-grid: none;
  // CORES =============
  --hue: 280; //cor matriz
  --hue-sec: 840; //cor matriz

  --color-light: hsl(var(--hue) 100% 80%);
  --color-primary: hsl(var(--hue) 100% 30%);
  --color-dark: hsl(var(--hue) 100% 10%);
  --color-alt: hsl(var(--hue) 100% 80%);
  --color-second: hsl(var(--hue-sec) 94% 87%);
  // --color-second: rgb(255, 222, 150);

  --link: hsl(var(--hue) 100% 80%);
  a {color: var(--body-font-color); }

  --font-body: sans-serif;

  // --font: 'Poppins', sans-serif;
  --font: 'M PLUS Rounded 1c', sans-serif;
  // --font: 'DM Sans', sans-serif;
} ////////////////////////////////////////////////// END ROOT

/*===  BASE ============================ */
// 



a.logo { color: var(--ton90);}
.color-light {color: var(--color-light);}
.color-primary {color: var(--color-primary);}
.bg-color-primary {background: var(--color-primary);}
.title {  font: 700 var(--font-size-title) var(--font-title);  // color: var(--color-light);
} ////////////////////////////////////////////////// END BASE
.container { margin-left: 2vw; margin-right: 2vw;} 



/*====  LAYOUT ============================ */
html { }
///////////////////////////////////////////////////////  L0
///////////////////////////////  BODY_LAY0
body.lay0{
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  grid-template-rows: minmax(var(--height-mainlay1), auto);
                      
  font: 400 1rem var(--font-body);
  color: var(--ton90);
  background: purple
}
///////////////////////////////  ASIDE Lay1 ---
aside.lay1{
  visibility: hidden;
  display: grid; /* IMPORTANTE JS INIT = none */
  grid-column: 1 / 9;
  grid-row: 1 / 2;
  z-index: 11; /* mq */
  // min-width: 170px;

  background-image: 
  linear-gradient( 43deg, var(--color-dark) 0%, var(--color-dark) 30%,   var(--color-primary) 100%);

  header{
    display: flex;
    height: var(--height-header); 
    justify-content: end ;
    align-items: center;
  }

  /* ASIDE_LAY1_main*/
  main{
    margin-top: 1rem;
    /* ASIDE LAY1 Header */ 
    header{
      display: flex;
      height: var(--height-header); 
      justify-content: center ;
      align-items: center;
      
      i {color: var(--color-light);padding: .4rem;}
      i:hover {color: white;}
    }
      ul{
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem ;
        margin-top: 1rem;
        padding-left: 1rem;
        font-size: 2rem;
        li{
          display: flex;
          width: 90%;
          justify-content: start;
        }li:hover {border-right: 2px solid var(--color-second);}
        li:hover > a i{color: var(--color-second);}
      }
  }
} /** ASIDE lay1 */


///////////////  MAIN LAY1
main.lay1 {
  display: grid;
  grid-column: 1 / 13; grid-row: 1 / 2;
  background: var(--ton10);
  
  
  grid-template-columns: 1fr;
  // grid-template-rows:  var(--height-header) minmax(80vh, 1fr) 1fr ;
  grid-template-rows:   var(--height-header) minmax(78vh, auto) var(--height-footer) ;
}
/* MAIN_LAY1 */ 
///////////////////////////////////////////////////////  L2
///////////////////////////////  HEADER LAY2
header.lay2{ 
  display: grid;
  grid-column: 1 / 2; grid-row: 1 / 2;
  
  background-color: var(--ton90);
  
  nav{
    display: flex;
    width: 100%; height: 100%;

    justify-content: space-between;
    align-items: center;
    // font-size: 1rem;
    color: var(--color-primary);




  }

}
/* headerLay2 */ 
///////////////////////////////  MAIN_LAY2




main.lay2{
  display: grid;
  grid-column: 1 / 2; grid-row: 2 / 3;
  // height: minmax( );


/////////////////////////////////////// main FOOTER layout LAY2
